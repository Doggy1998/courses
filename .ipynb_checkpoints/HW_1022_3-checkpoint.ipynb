    "\n",
    "\n",
    "number = input(\"你要幾層的聖誕樹? \")\n",
    "\n",
    "for i in range(1, int(number)+1):\n",
    "    j = 2*i -1\n",
    "    print('{:^30s}'.format('*'*j))\n",
    "    print('{:^30s}'.format('*'*(j*2+1)))\n",
    "    print('{:^30s}'.format('*'*(j*2+3)))"
   ]
  }
